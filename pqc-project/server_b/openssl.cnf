#
# OpenSSL configuration file for the PQC Demonstration Project.
#
# This file is used to configure the custom-built OpenSSL for Server B
# to load and activate the oqs-provider, which contains the PQC
# algorithm implementations.
#

# This specifies the location of the main OpenSSL configuration file.
# We point it to the one we are creating in the local installation directory.
# The `.` variable refers to the directory where this config file is located.
openssl_conf = openssl_init

[openssl_init]
providers = provider_sect
alg_section = algorithm_sect

[provider_sect]
# This defines a provider named 'oqsprovider'. The name is arbitrary.
oqsprovider = oqs_provider_sect
default = default_sect

# This section points to the actual oqs-provider module.
# The path is relative to the directory defined by the '--openssldir'
# option during the OpenSSL build, which is our local `install` dir.
[oqs_provider_sect]
module = lib/ossl-modules/oqsprovider.so
activate = 1

[default_sect]
activate = 1

# Optional: define a specific algorithm section if needed,
# but activation should be sufficient.
[algorithm_sect]
default_properties = ?provider=default
